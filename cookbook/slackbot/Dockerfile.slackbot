FROM python:3.11-slim

WORKDIR /app

COPY . /app

RUN apt-get update && \
    apt-get install -y git build-essential curl && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

RUN pip install uv
RUN uv venv
RUN uv pip install -r requirements.txt


CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]